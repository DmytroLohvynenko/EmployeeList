@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="mainApp">
<head>    
    <title>Employee List</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/site.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/employeesControllers.js"></script>
    <script src="~/Scripts/app/remoteService.js"></script>
</head>

<body ng-controller="employeeListController">
    <div id="employeeList">
        <div ng-repeat="empl in employees" class="employeeItem">
            <a href="#/employees/{{empl.id}}">Employee {{empl.id}}</a>
        </div>
    </div>    
</body>
</html>
